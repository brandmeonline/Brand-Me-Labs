# Production Environment Configuration
# =====================================
#
# WARNING: Replace all placeholder values before deploying to production
# Store sensitive values in a secrets manager (AWS Secrets Manager, Vault, etc.)

# Environment
ENVIRONMENT=production
DEFAULT_REGION=us-east1

# Database
POSTGRES_DB=brandme_prod
POSTGRES_USER=brandme_app
POSTGRES_PASSWORD=${DB_PASSWORD}  # Replace with actual secret
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:5432/brandme_prod

# Redis
REDIS_PASSWORD=${REDIS_PASSWORD}  # Replace with actual secret

# Authentication
OAUTH_CLIENT_ID=${OAUTH_CLIENT_ID}  # Replace with actual OAuth client ID
OAUTH_CLIENT_SECRET=${OAUTH_CLIENT_SECRET}  # Replace with actual secret
JWT_SECRET=${JWT_SECRET}  # Replace with 32+ character random secret
OAUTH_ISSUER=https://auth.brandme.io

# Services (Internal Service Mesh URLs)
GATEWAY_URL=https://api.brandme.io
BRAIN_SERVICE_URL=http://brain.brandme.svc.cluster.local:8000
POLICY_SERVICE_URL=http://policy.brandme.svc.cluster.local:8001
IDENTITY_SERVICE_URL=http://identity.brandme.svc.cluster.local:8100
KNOWLEDGE_SERVICE_URL=http://knowledge.brandme.svc.cluster.local:8101
COMPLIANCE_SERVICE_URL=http://compliance.brandme.svc.cluster.local:8102
CHAIN_SERVICE_URL=http://chain.brandme.svc.cluster.local:3001

# Messaging
NATS_URL=nats://nats.brandme.svc.cluster.local:4222

# Observability
OTEL_ENABLED=true
OTEL_ENDPOINT=http://otel-collector.observability.svc.cluster.local:4317
LOG_LEVEL=info
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_USER=${GRAFANA_USER}
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}

# Blockchain
CARDANO_NETWORK=mainnet
MIDNIGHT_NETWORK=mainnet
CARDANO_API_KEY=${CARDANO_API_KEY}
MIDNIGHT_API_KEY=${MIDNIGHT_API_KEY}

# CORS
CORS_ORIGINS=https://console.brandme.io,https://app.brandme.io

# Celery
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis.brandme.svc.cluster.local:6379/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis.brandme.svc.cluster.local:6379/1

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_MIDNIGHT=true
ENABLE_HUMAN_REVIEW=true
ENABLE_AUDIT_CHAIN=true

# Security
ENABLE_MTLS=true
TLS_CERT_PATH=/etc/tls/certs
TLS_KEY_PATH=/etc/tls/keys

# Monitoring & Alerting
SENTRY_DSN=${SENTRY_DSN}
PAGERDUTY_API_KEY=${PAGERDUTY_API_KEY}
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}

# Backup & Disaster Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM UTC
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_BUCKET=${BACKUP_BUCKET}

# Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=3650  # 10 years
