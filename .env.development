# Development Environment Configuration
# ======================================

# Environment
ENVIRONMENT=development
DEFAULT_REGION=us-east1

# Database
POSTGRES_DB=brandme_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_dev_password
DATABASE_URL=postgresql://postgres:postgres_dev_password@postgres:5432/brandme_dev

# Redis
REDIS_PASSWORD=redis_dev_password

# Authentication
OAUTH_CLIENT_ID=dev-client-id
OAUTH_CLIENT_SECRET=dev-client-secret
JWT_SECRET=development-jwt-secret-min-32-characters-long-replace-in-production
OAUTH_ISSUER=https://auth.brandme.local

# Services
GATEWAY_URL=http://localhost:3000
BRAIN_SERVICE_URL=http://brain:8000
POLICY_SERVICE_URL=http://policy:8001
IDENTITY_SERVICE_URL=http://identity:8100
KNOWLEDGE_SERVICE_URL=http://knowledge:8101
COMPLIANCE_SERVICE_URL=http://compliance:8102
CHAIN_SERVICE_URL=http://chain:3001

# Messaging
NATS_URL=nats://nats:4222

# Observability
OTEL_ENABLED=true
OTEL_ENDPOINT=http://otel-collector:4317
LOG_LEVEL=debug
PROMETHEUS_PORT=8000

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Blockchain
CARDANO_NETWORK=testnet
MIDNIGHT_NETWORK=testnet

# CORS
CORS_ORIGINS=http://localhost:3002,http://localhost:3000

# Celery
CELERY_BROKER_URL=redis://:redis_dev_password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis_dev_password@redis:6379/1

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
ENABLE_BLOCKCHAIN=false
ENABLE_MIDNIGHT=false
ENABLE_HUMAN_REVIEW=true
ENABLE_AUDIT_CHAIN=true
