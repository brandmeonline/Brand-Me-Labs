# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# API URLs
NEXT_PUBLIC_GATEWAY_URL=http://localhost:3000
NEXT_PUBLIC_COMPLIANCE_SERVICE_URL=http://localhost:8102
NEXT_PUBLIC_KNOWLEDGE_SERVICE_URL=http://localhost:8101
NEXT_PUBLIC_CHAIN_SERVICE_URL=http://localhost:3001

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=your-nextauth-secret-here-change-in-production

# OAuth Providers (if using external OAuth)
# OAUTH_CLIENT_ID=
# OAUTH_CLIENT_SECRET=
# OAUTH_ISSUER=

# Feature Flags
NEXT_PUBLIC_ENABLE_GOVERNANCE_CONSOLE=true
NEXT_PUBLIC_ENABLE_TRANSPARENCY_PORTAL=true
NEXT_PUBLIC_ENABLE_CONTROLLED_REVEALS=true

# Logging
NEXT_PUBLIC_LOG_LEVEL=info

# Blockchain Explorers
NEXT_PUBLIC_CARDANO_EXPLORER_URL=https://preprod.cardanoscan.io
NEXT_PUBLIC_MIDNIGHT_EXPLORER_URL=https://explorer.midnight.network
