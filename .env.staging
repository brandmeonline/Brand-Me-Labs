# Staging Environment Configuration
# ==================================

# Environment
ENVIRONMENT=staging
DEFAULT_REGION=us-east1

# Database
POSTGRES_DB=brandme_staging
POSTGRES_USER=brandme_staging
POSTGRES_PASSWORD=${DB_PASSWORD}  # Replace with actual secret
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:5432/brandme_staging

# Redis
REDIS_PASSWORD=${REDIS_PASSWORD}

# Authentication
OAUTH_CLIENT_ID=${OAUTH_CLIENT_ID_STAGING}
OAUTH_CLIENT_SECRET=${OAUTH_CLIENT_SECRET_STAGING}
JWT_SECRET=${JWT_SECRET_STAGING}
OAUTH_ISSUER=https://auth-staging.brandme.io

# Services
GATEWAY_URL=https://api-staging.brandme.io
BRAIN_SERVICE_URL=http://brain:8000
POLICY_SERVICE_URL=http://policy:8001
IDENTITY_SERVICE_URL=http://identity:8100
KNOWLEDGE_SERVICE_URL=http://knowledge:8101
COMPLIANCE_SERVICE_URL=http://compliance:8102
CHAIN_SERVICE_URL=http://chain:3001

# Messaging
NATS_URL=nats://nats:4222

# Observability
OTEL_ENABLED=true
OTEL_ENDPOINT=http://otel-collector:4317
LOG_LEVEL=debug
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=${GRAFANA_PASSWORD_STAGING}

# Blockchain
CARDANO_NETWORK=testnet
MIDNIGHT_NETWORK=testnet

# CORS
CORS_ORIGINS=https://console-staging.brandme.io,https://app-staging.brandme.io

# Celery
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/1

# Rate Limiting
RATE_LIMIT_MAX=500
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_MIDNIGHT=false
ENABLE_HUMAN_REVIEW=true
ENABLE_AUDIT_CHAIN=true

# Monitoring
SENTRY_DSN=${SENTRY_DSN_STAGING}
